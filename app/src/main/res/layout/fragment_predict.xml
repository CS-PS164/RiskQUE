<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    tools:context=".ui.predict.PredictFragment">

    <ImageView
        android:id="@+id/iv_background_predict"
        style="@style/appBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_predict"
        style="@style/label.large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Prediksi DPLK"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_investor"
        style="@style/body.small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Masukan data pada form dibawah, untuk prediksi DPLK"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_predict" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_predict"
        style="@style/button.big"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Predict"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_predict"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_background_predict">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_money_market"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Pasar Uang" />

            <EditText
                android:id="@+id/et_money_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_obligation"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Pasar Uang" />

            <EditText
                android:id="@+id/et_obligation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_stock"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Saham" />

            <EditText
                android:id="@+id/et_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_month_1"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Bulan 1" />

            <EditText
                android:id="@+id/et_month_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_month_3"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Bulan 3" />

            <EditText
                android:id="@+id/et_month_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_month_6"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Bulan 6" />

            <EditText
                android:id="@+id/et_month_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_year_1"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Tahun 1" />

            <EditText
                android:id="@+id/et_year_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_year_3"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Tahun 3" />

            <EditText
                android:id="@+id/et_year_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_year_5"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Tahun 5" />

            <EditText
                android:id="@+id/et_year_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/tv_aum"
                style="@style/body.small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Asset Under Management (AUM)" />

            <EditText
                android:id="@+id/et_aum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_edit_text"
                android:inputType="numberDecimal"
                android:paddingHorizontal="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/predict_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_floating_predict"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_risk_type"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_button"
            app:layout_constraintBottom_toTopOf="@+id/tv_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_result"
            style="@style/label.large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Moderat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>