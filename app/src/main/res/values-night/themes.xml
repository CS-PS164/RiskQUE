<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RiskQUE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkpurple</item>
        <item name="colorOnPrimary">@color/darkpurple_on</item>
        <item name="colorPrimaryContainer">@color/darkpurple_container</item>
        <item name="colorOnPrimaryContainer">@color/darkpurple_on_container</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blackolive</item>
        <item name="colorOnSecondary">@color/blackolive_on</item>
        <item name="colorSecondaryContainer">@color/blackolive_container</item>
        <item name="colorOnSecondaryContainer">@color/blackolive_on_container</item>


        <!-- Ternary brand color. -->
        <item name="colorTertiary">@color/gunmetal</item>
        <item name="colorOnTertiary">@color/gunmetal_on</item>
        <item name="colorTertiaryContainer">@color/gunmetal_container</item>
        <item name="colorOnTertiaryContainer">@color/gunmetal_on_container</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimaryContainer</item>

        <item name="colorSurface">?attr/colorOnPrimary</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- bg color. -->
    <style name="colorbackgroundStyle">
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="appBarStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Font style -->
    <style name="display">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="display.medium">
        <item name="android:textSize">45sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
    </style>

    <style name="display.small">
        <item name="android:textSize">36sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="title.large">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="title.medium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8.15sp</item>
    </style>

    <style name="title.small">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6.1sp</item>
    </style>

    <style name="label">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="label.large">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6.1sp</item>
    </style>

    <style name="label.medium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4.5sp</item>
    </style>

    <style name="label.small">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">5.5sp</item>
    </style>

    <style name="body">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="body.large">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8.5sp</item>
    </style>

    <style name="body.medium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6.25sp</item>
    </style>

    <style name="body.small">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4.4sp</item>
    </style>

    <style name="button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="button.small">
        <item name="android:layout_width">104dp</item>
    </style>

    <style name="button.big">
        <item name="android:layout_width">156dp</item>
    </style>
</resources>